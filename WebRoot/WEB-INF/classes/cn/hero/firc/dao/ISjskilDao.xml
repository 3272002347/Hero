<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hero.firc.dao.ISjskilDao">

	<!-- 定义映射结果集(召唤师技能) -->
	<resultMap type="Sjskil" id="sjskilMap">
		<result property="id" column="Id" />
		<result property="sjskill" column="sjskill" />
		<result property="sjrole" column="sjrole" />
		<result property="sfjn" column="sfjn" />

		<!-- 映射集合属性(图标) -->
		<association property="src" javaType="Src">
			<result property="id" column="id" />
			<result property="imgsrc" column="imgsrc" />
			<result property="imgtypeid" column="imgtypeid" />
			<result property="corrId" column="corrId" />
		</association>

	</resultMap>

	<!-- 查询所有召唤师技能 -->
	<select id="querySjskil" resultMap="sjskilMap">
		SELECT * FROM src AS s,sjskil
		AS sj
		WHERE s.corrId=sj.`id`
		AND s.`imgtypeid`=4
	</select>
</mapper>